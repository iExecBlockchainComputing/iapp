{
  "compilerOptions": {
    "module": "node16",
    "target": "ES2022",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "allowJs": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "templates"]
}
